{
	"name": "MiLink",
	"version": "1.3",
	"manifest_version": 2,

	"description": "MiLink",
	"icons": {
		"48": "48.png"
	},
	"browser_action": {
	   "default_icon": "19_2.png", // optional 
	   "default_title": "MiLink",      // optional; shown in tooltip 
	   "default_popup": "popup.html"        // optional 
	},
   "background": {
      "page": "background.html"
   },
   "options_page": "options.html",   
   "permissions": [ "tabs", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*" ]
}